<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <com.nesib.quotegram.utils.NestedHorizontalScrollViewConainer
        android:layout_width="match_parent"
        android:id="@+id/bookGenreScrollView"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:paddingHorizontal="@dimen/page_padding"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/bookChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkedChip="@id/chip_all"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_adventure"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_adventure" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_motivation"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/genre_motivation" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_art"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_art" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_biography"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_biography" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_business"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_business" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_children"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_children" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_classic"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_classic" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_dystpoian"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_dystpoian" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_fantasy"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_fantasy" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_health"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_health" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_historical_fiction"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_historical_fiction" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_humor"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_humor" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_leadership"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_leadership" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_motivational"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_motivational" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_parenting"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_parenting" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_psychology"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_psychology" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_relationship"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_relationship" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_romance"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_romance" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_science_fiction"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_science_fiction" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_self_help"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_self_help" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_spirituality"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_spirituality" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_wealth"
                    style="@style/CustomChipStyleNoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_genre_wealth" />
            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>
    </com.nesib.quotegram.utils.NestedHorizontalScrollViewConainer>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchBooksRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bookGenreScrollView"
        android:clipToPadding="false"
        android:paddingBottom="30dp" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/custom_progress_bar"
        android:visibility="invisible" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/paginationProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:visibility="invisible"
        app:shimmer_base_alpha="0.5">

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/fullPostBackgroundColor" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/failContainer"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:id="@+id/failMessage"
            android:text="Something went wrong...."
            android:textColor="@color/colorSecondaryText"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@drawable/add_quote_from_this_book_bg"
            android:id="@+id/tryAgainButton"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:includeFontPadding="false"
            android:paddingVertical="5dp"
            android:text="Try Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>